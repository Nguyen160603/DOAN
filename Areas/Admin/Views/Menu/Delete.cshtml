@model DOAN.Models.TbMenu

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-6 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Xác nhận sửa Menu</h4>
                        <p class="card-description">
                            Chỉnh sửa menu
                        </p>
                       
                            <div class="form-group">
                                <label asp-for="Title" class="control-label"></label>
                                <input asp-for="Title" class="form-control" disabled/>
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Alias" class="control-label"></label>
                                <input asp-for="Alias" class="form-control" disabled />
                                <span asp-validation-for="Alias" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Description" class="control-label"></label>
                                <input asp-for="Description" class="form-control" disabled />
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Levels" class="control-label"></label>
                                <input asp-for="Levels" class="form-control" disabled />
                                <span asp-validation-for="Levels" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ParentId" class="control-label"></label>
                                <input asp-for="ParentId" class="form-control" disabled />
                                <span asp-validation-for="ParentId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Position" class="control-label"></label>
                                <input asp-for="Position" class="form-control" disabled />
                                <span asp-validation-for="Position" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="CreatedDate" class="control-label"></label>
                                <input asp-for="CreatedDate" class="form-control" disabled />
                                <span asp-validation-for="CreatedDate" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="CreatedBy" class="control-label"></label>
                                <input asp-for="CreatedBy" class="form-control" disabled />
                                <span asp-validation-for="CreatedBy" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ModifiedDate" class="control-label"></label>
                                <input asp-for="ModifiedDate" class="form-control" disabled />
                                <span asp-validation-for="ModifiedDate" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ModifiedBy" class="control-label"></label>
                                <input asp-for="ModifiedBy" class="form-control" disabled />
                                <span asp-validation-for="ModifiedBy" class="text-danger"></span>
                            </div>
                            <form asp-action="Delete" method="post">
                                <input type="hidden" asp-for="MenuId" />
                                <a class="btn btn-lg btn-warning p-2 mr-5" href="javascript:history.back()">
                                    <i class="bi bi-arrow-left-circle"></i>Quay lại
                                </a>
                                <button type="submit" value="Delete" class="btn btn-lg btn-danger p-2">
                                    <i class="bi bi-trash-fill"></i>Xóa bài viết
                                </button>
                            </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
